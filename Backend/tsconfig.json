{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@koa/router/*": ["node_modules/@koa/router/"]
    },
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": ["src/**/*", "typings/**/*"],
}

{
  "name": "backend",
  "version": "0.1.0",
  "description": "node后端服务",
  "main": "./src/app.ts",
  "bin": "./dist/app.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start-dev": "cross-env ENV_VAR=development nodemon --watch src/**/*.ts --exec ts-node src/app.ts",
    "build": "tsc && copyfiles -u 1 \"src/**/*.json\" dist",
    "build:pkg": "npm run build && pkg . --targets node18-macos-arm64 --out-path binary && mv binary/backend binary/arm64_binary",
    "build:pkg:amd64": "npm run build && pkg . --targets node18-linuxstatic-x64 --out-path binary && mv binary/backend binary/amd64_binary",
    "build:pkg:win": "npm run build && pkg . --targets node18-win-x64 --out-path binary && mv binary/backend binary/win_binary",
    "start:prod": "npm run build && cross-env ENV_VAR=production node dist/app.js"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.0.0",
    "@google-cloud/speech": "^5.4.1",
    "@google-cloud/storage": "^6.9.5",
    "@koa/router": "^12.0.0",
    "@sentry/integrations": "^7.55.2",
    "@sentry/node": "^7.55.2",
    "add": "^2.0.6",
    "axios": "0.27.2",
    "bcrypt": "^5.0.1",
    "extract-zip": "^2.0.1",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.1.1",
    "google-auth-library": "^8.7.0",
    "https-proxy-agent": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.4.0",
    "koa-router": "^10.0.0",
    "koa2-cors": "^2.0.6",
    "moment": "^2.29.4",
    "mysql2": "^3.3.3",
    "node-media-server": "^2.6.2",
    "nodemailer": "^6.9.3",
    "nodemon": "^2.0.21",
    "openai": "^3.2.1",
    "portfinder": "^1.0.32",
    "redis": "^4.6.7",
    "sqlite": "^4.1.2",
    "sqlite3": "^5.1.6",
    "systeminformation": "^5.17.16",
    "tmp": "^0.2.1",
    "typescript": "^5.0.2",
    "uuid": "^9.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/ffmpeg-static": "^3.0.1",
    "@types/ffprobe-static": "^2.0.1",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/koa": "^2.13.5",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa2-cors": "^2.0.2",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^18.15.6",
    "@types/node-media-server": "^2.3.4",
    "@types/nodemailer": "^6.4.8",
    "@types/sqlite3": "^3.1.8",
    "@types/tmp": "^0.2.3",
    "@types/uuid": "^9.0.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.2",
    "jest": "^27.4.5",
    "pkg": "^5.8.1",
    "supertest": "^6.1.6",
    "ts-node": "^10.9.1"
  }
}
